<IfModule mod_rewrite.c>

RewriteEngine On

RewriteBase /

#### Force HTTPS://WWW and remove trailing / from files ####

## Force https and www
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\.noisesaigon\.com$ [NC]
RewriteRule ^(.*)$ https://www.noisesaigon.com/$1 [L,R=301]

## Remove trailing slash if not directory
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} (.+)/$
RewriteRule ^(.*)/$ https://www.noisesaigon.com/$1 [R=301,L]

</IfModule>
